{
	"name": "solid-i18next",
	"version": "0.0.1",
	"type": "module",
	"description": "i18next integration for Solid.js with reactive hooks, a Trans component, and built-in Suspense support",
	"exports": {
		".": "./src/index.ts"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && bun run ./build.ts",
		"vite:build": "tsc && vite build",
		"vite:preview": "vite preview",
		"check": "bun biome check",
		"release": "bun run build && npm publish --access public ./dist"
	},
	"dependencies": {},
	"peerDependencies": {
		"i18next": "^25.8.13",
		"solid-js": "^1.9.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@tailwindcss/vite": "^4.2.1",
		"@types/bun": "^1.3.9",
		"i18next": "^25.8.13",
		"i18next-resources-to-backend": "^1.2.1",
		"solid-js": "^1.9.11",
		"tailwindcss": "^4.2.1",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-solid": "^2.11.10"
	},
	"license": "MIT",
	"author": "Lukas Heizmann <lukas@heizmann.dev>",
	"homepage": "https://github.com/lkwr/solid-i18next#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lkwr/solid-i18next.git"
	},
	"bugs": {
		"url": "https://github.com/lkwr/solid-i18next/issues"
	},
	"keywords": [
		"solid",
		"solidjs",
		"solid-js",
		"i18next",
		"i18n",
		"internationalization",
		"translation"
	]
}
